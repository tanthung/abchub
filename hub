-- Giao diện đơn giản với menu lựa chọn trong Lua sử dụng Love2D
local options = {"Tùy chọn 1", "Tùy chọn 2", "Tùy chọn 3", "Tùy chọn 4"}
local selected = 1
local font

function love.load()
    -- Tải font chữ
    font = love.graphics.newFont(20)
end

function love.update(dt)
    -- Không có gì cần cập nhật trong hàm này cho ví dụ đơn giản này
end

function love.keypressed(key)
    -- Di chuyển lựa chọn khi người dùng nhấn các phím mũi tên lên/xuống
    if key == "down" then
        selected = selected + 1
        if selected > #options then
            selected = 1
        end
    elseif key == "up" then
        selected = selected - 1
        if selected < 1 then
            selected = #options
        end
    elseif key == "return" then
        print("Đã chọn: " .. options[selected])
    end
end

function love.draw()
    love.graphics.setFont(font)
    love.graphics.setColor(1, 1, 1)  -- Màu chữ trắng

    -- Vẽ tiêu đề
    love.graphics.print("Chọn một tùy chọn:", 200, 50)

    -- Vẽ các tùy chọn
    for i, option in ipairs(options) do
        if i == selected then
            love.graphics.setColor(0, 1, 0)  -- Màu xanh lá khi lựa chọn
        else
            love.graphics.setColor(1, 1, 1)  -- Màu trắng
        end
        love.graphics.print(option, 200, 100 + (i - 1) * 40)
    end
end
